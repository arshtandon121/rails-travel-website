<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Natural Escape - Your Wilderness Adventure Companion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f4f8;
        color: #2c3e50;
    }
    
.check-width{
    width: 98%;
}

    
    .section-title, .section-title-1 {
        color: #2ecc71;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        font-weight: 700;
      
        text-align: center;
    }
    
    .card {
        background-color: #ffffff;
        box-shadow: 0 15px 30px rgba(46, 204, 113, 0.1);
        border: 2px solid #2ecc71;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        transform-style: preserve-3d;
    }
    
    .card:hover {
        transform: translateY(-10px) rotateX(5deg) rotateY(5deg);
        box-shadow: 0 20px 40px rgba(46, 204, 113, 0.2);
    }
    
    .card-img-top {
        height: 350px;
        object-fit: cover;
    }
    
    .card-body {
        transform: translateZ(20px);
    }
    
    .card-title {
        color: #27ae60;
        font-weight: 600;
    }
    
    .card-text {
        color: #34495e;
    }
    
    .btn-custom {
        background-color: #27ae60;
        color: #ffffff;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        transform: translateZ(10px);
    }
    
    .btn-custom:hover {
        background-color: #219653;
        transform: translateY(-2px) translateZ(10px);
    }
    
    .btn-select {
        background-color: #3498db;
        color: #ffffff;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        transform: translateZ(10px);
    }
    
    .btn-select:hover {
        background-color: #2980b9;
        transform: translateY(-2px) translateZ(10px);
    }
    
    footer {
        background-color: #2ecc71;
        color: #ffffff;
        padding: 40px 0;
        transform-style: preserve-3d;
    }
    
    #categories {
        background-color: #e8f6f3;
        padding: 60px 0;
        transform-style: preserve-3d;
    }
    
    .scroll-arrow {
        background-color: #27ae60;
        color: #ffffff;
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        font-size: 20px;
        transition: all 0.3s ease;
        position: absolute;
        top: 50%;
        
    }
    
    .scroll-arrow:hover {
        background-color: #219653;
        transform: scale(1.1) translateZ(20px);
    }

    .categories-wrapper {
        display: flex;
        justify-content: space-evenly;
        overflow-x: auto;
        scroll-behavior: smooth;
        -webkit-overflow-scrolling: touch;
        padding: 20px 0;
    }

    .category-tag {
        flex: 0 0 auto;
        margin-right: 15px;
    }

    .category-tag a {
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        transform-style: preserve-3d;
    }

    .category-tag a:hover {
        transform: translateY(-2px) translateZ(10px);
    }

    .social-icons a {
        color: white;
        font-size: 1.5rem;
        margin: 0 10px;
        transition: all 0.3s ease;
        transform-style: preserve-3d;
    }
    
    .social-icons a:hover {
        transform: translateY(-3px) translateZ(10px);
    }

    .scroll-arrow {
    display: none; /* Hide arrows by default */
}

@media (min-width: 768px) {
    .scroll-arrow {
        display: inline-block; /* Show arrows on screens larger than 768px */
    }
}





    
    </style>
</head>
<body>

    <section id="categories" class="py-4">
  
        <div class="container categories-container px-0">
            <button class="scroll-arrow scroll-left">&lt;</button>
            <button class="scroll-arrow scroll-right">&gt;</button>
            <div class="categories-wrapper">
                <% @camps.keys.each do |category| %>
                    <div class="category-tag">
                        <a href="#<%= category %>" class="category-tag badge rounded-pill bg-success text-white p-3">
                        <%=  category.to_s.humanize.capitalize %>
                        </a>
                    </div>
                <% end %>
            </div>
        </div>
    </section>  

   

    <% @camps.keys.each do |category| %>
        <section id="<%= category %>"  class="category-section check-width">
          <h2><%= category.to_s.humanize.capitalize %> Adventures</h2>
          <%= render partial: 'camp_row', locals: { camps: @camps[category], category: category } %>
        </section>
      <% end %>
      
      

    <section id="about" class="py-5">
        <div class="container">
            <h2 class="section-title">Our Mission</h2>
            <p class="lead text-center">We are dedicated to connecting nature enthusiasts with extraordinary wilderness experiences. Our carefully curated selection of adventures caters to every type of explorer, from novice campers to seasoned backpackers.</p>
        </div>
    </section>

    <section id="contact" class="py-5 bg-light">
        <div class="container">
            <h2 class="section-title">Get in Touch</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <form>
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Your Name">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="Your Email">
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="5" placeholder="Your Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-custom">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <footer class="text-center py-4">
        <div class="container">
            <p>&copy; 2024 Natural Escape. All rights reserved.</p>
            <div class="social-icons">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
    const wrapper = document.querySelector('.categories-wrapper');
    const leftArrow = document.querySelector('.scroll-left');
    const rightArrow = document.querySelector('.scroll-right');

    if (wrapper) {
        wrapper.scrollRight = 45;
    }

    const scrollAmount = 200;

    function updateArrowStates() {
        leftArrow.disabled = wrapper.scrollLeft <= 0;
        rightArrow.disabled = 
            wrapper.scrollLeft + wrapper.clientWidth >= wrapper.scrollWidth - 1;
    }

    function smoothScroll(direction) {
        const start = wrapper.scrollLeft;
        const change = direction * scrollAmount;
        const duration = 300;
        let startTime = null;

        function animation(currentTime) {
            if (startTime === null) startTime = currentTime;
            const timeElapsed = currentTime - startTime;
            const run = ease(timeElapsed, start, change, duration);
            wrapper.scrollLeft = run;
            if (timeElapsed < duration) requestAnimationFrame(animation);
        }

        function ease(t, b, c, d) {
            t /= d / 2;
            if (t < 1) return c / 2 * t * t + b;
            t--;
            return -c / 2 * (t * (t - 2) - 1) + b;
        }

        requestAnimationFrame(animation);
    }

    leftArrow.addEventListener('click', () => {
        smoothScroll(-1);
    });

    rightArrow.addEventListener('click', () => {
        smoothScroll(1);
    });

    wrapper.addEventListener('scroll', updateArrowStates);
    updateArrowStates();

    // Smooth scrolling for category tags
    const categoriesSection = document.getElementById('categories');
    const categoryTags = document.querySelectorAll('.category-tag a');

    categoryTags.forEach(tag => {
        tag.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href').substring(1);
            const targetElement = document.getElementById(targetId);

            if (targetElement) {
                const offset = targetElement.offsetTop - categoriesSection.offsetHeight - 20;
                window.scrollTo({
                    top: offset,
                    behavior: 'smooth'
                });
            }
        });
    });
});

</script>